@import "../../iconfont/index.wxss";

.container {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx 30rpx;
  width: 100%;
  display: flex;
  font-size: 22rpx;
}

.container .left {
  position: relative;
}

.container .left .cover-image {
  width: 180rpx;
  height: 190rpx;
  border-radius: 10rpx;
}

.container .left .type-tag {
  padding: 10rpx;
  width: max-content;
  background-color: #333333;
  opacity: .7;
  font-size: 14rpx;
  z-index: 2;
  position: absolute;
  right: 0;
  color: #fff;
}

.container .right {
  width: 100%;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.container .right .row {
  display: flex;
  align-items: center;
}

.container .right .row .service-title {
  min-width: 100rpx;
  max-width: 340rpx;
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.container .right .row .category {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.container .right .row .publisher {
  display: flex;
  align-items: center;
}

.container .right .row .publisher .publisher-avatar .publisher-avatar-image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.container .right .row .publisher .publisher-nickname {
  margin-left: 10rpx;
}

.container .right .row .score {
  color: #f27013;
}

.container .right .row .create-time {
  color: #888;
}

.container .right .row .price {
  font-size: 32rpx;
  color: red;
}

.container .right .row .sales {
  color: #333333;
}

.container .right .row-last {
  justify-content: space-between;
}

.container .right .row-last .label {
  color: red;
  font-size: 22rpx;
}