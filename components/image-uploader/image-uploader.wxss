.container {
    display: flex;
    flex-wrap: wrap;
}
.uploader-item {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 160rpx;
    height: 160rpx;
    margin: 20rpx;
}
.display-image {
    width: 100%;
    height: 100%;
}

.icon-uploading, .icon-delete,.error {
    position: absolute;
    z-index: 2;
    padding: 2rpx 10rpx;
    background-color: #3333;
    opacity: 0.7;
}
.icon-delete {
    border-radius: 50%;
    top: -20rpx;
    right: -20rpx;
}
.error {
    color: #fff;
    font-size: 20rpx;
}