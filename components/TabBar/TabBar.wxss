.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
}

.container .tabs {
  background-color: #fff;
  display: flex;
  padding: 15rpx;
  position: sticky;
  top: 0;
  z-index: 99;
}

.container .tabs .tabs-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.container .tabs .tabs-item .divider {
  height: 6rpx;
  width: 50rpx;
  background-color: #f3d066;
  margin-top: 10rpx;
}

.container .tabs .active {
  font-weight: 700;
}

.container .tabs-panel {
  flex: 1;
  margin-top: 30rpx;
}
