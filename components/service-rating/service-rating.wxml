<view class="container">
  <view class="row">
    <view class="author">
      <i-avatar
        sharp="circle"
        src="{{rating.author.avatar}}"
        text="{{rating.author.nickname}}"
        size="40"
      ></i-avatar>
    </view>
    <view class="create-time">{{rating.create-time}}</view>
  </view>
  <view class="score">
    评分:
    <i-rating
      count="{{5}}"
      selected="{{rating.score}}"
      size="{{36}}"
    ></i-rating>
  </view>
</view>

