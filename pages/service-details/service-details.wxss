.container {
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #efefef;
  width: 100%;
}

.service-container {
  padding-bottom: 300rpx;
}

.service-info {
  width: 100%;
  background-color: #fff;
  padding-bottom: 30rpx;
}

.service-info .cover-image image {
  width: 100%;
}

.service-info .row {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  padding: 0rpx 30rpx;
}

.service-info .row .title {
  font-size: 32rpx;
  font-weight: bold;
}

.service-info .row .category {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.service-info .row .category .tag-text {
  margin-left: 10rpx;
}

.service-info .row .score {
  margin-left: 30rpx;
  color: #f27013;
}

.service-info .row .price {
  font-size: 32rpx;
  color: red;
}

.service-info .row .price .label {
  font-size: 24rpx;
}

.service-info .row-space-between {
  justify-content: space-between;
}

.service-status,
.service-rating {
  margin-top: 30rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 30rpx;
  background-color: #fff;
}

.service-status {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.service-rating {
  min-height: 500rpx;
}

.service-rating .service-rating-title {
  padding-bottom: 20rpx;
  border-bottom: 1px solid #efefef;
}

.service-rating .service-rating-list {
  margin-top: 30rpx;
}

.service-rating .service-rating-item {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #efefef;
}

.action-bar {
  box-sizing: border-box;
  border-top: 1px solid #efefef;
  background-color: #fff;
  padding: 30rpx 30rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 2;
}

.action-bar .action-bar-item {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;
}
