<view class="container">
    <view class="time">{{_message.time}}</view>
    <view class="message-area" style="{{_message.flow === flowRnum.IN ? '' : 'flex-direction:row-reverse'}}">
        <view class="avatar">
            <image class="avatar-image" src="{{_message.avatar}}" />
        </view>
        <view class="content" style="background-color:{{_message.flow === flowRnum.IN ?'#fff' :'#f3d066' }}">
            <block wx:if="{{_message.type === TIM.TYPES.MSG_TEXT}}">
                {{_message.payload.text}}
            </block>
            <block wx:if="{{_message.type === TIM.TYPES.MSG_IMAGE}}">
                <image src="{{_message.payload.imageInfoArray[1].url}}" />
            </block>
            <block wx:if="{{_message.type === TIM.TYPES.MSG_CUSTOM}}">
                <i-service-card></i-service-card>
            </block>
        </view>
    </view>
</view>